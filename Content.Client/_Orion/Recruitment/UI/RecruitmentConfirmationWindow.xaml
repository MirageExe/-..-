<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      Title="{Loc 'recruitment-ui-title'}"
                      MinSize="540 280"
                      SetSize="540 280">
    <BoxContainer Orientation="Vertical" Margin="5" SeparationOverride="5">
        <controls:StripeBack>
            <Label Name="TitleLabel"
                   Text="{Loc 'recruitment-ui-invitation'}"
                   Align="Center"
                   StyleClasses="LabelHeading"/>
        </controls:StripeBack>
        <BoxContainer Orientation="Horizontal">
            <Label Text="{Loc 'recruitment-ui-organization'}" MinWidth="120"/>
            <Label Name="OrganizationLabel" Text="Unknown"/>
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Text="{Loc 'recruitment-ui-implant'}" MinWidth="120"/>
            <Label Name="ImplantLabel" Text="Unknown"/>
        </BoxContainer>

        <BoxContainer Orientation="Horizontal"
                      Margin="5"
                      HorizontalAlignment="Center"
                      SeparationOverride="10">
            <Button Name="AcceptButton"
                    Text="{Loc 'recruitment-ui-accept'}"
                    MinWidth="120"
                    StyleClasses="ButtonColorGreen"/>
            <Button Name="DeclineButton"
                    Text="{Loc 'recruitment-ui-decline'}"
                    MinWidth="120"
                    StyleClasses="ButtonColorRed"/>
        </BoxContainer>

        <controls:StripeBack>
            <RichTextLabel Name="WarningLabel"
                           HorizontalAlignment="Center"
                           StyleClasses="Caution"/>
        </controls:StripeBack>
        <RichTextLabel Name="WarningText"
                       Margin="2"
                       HorizontalAlignment="Center"
                       StyleClasses="LabelSubText"/>
    </BoxContainer>
</controls:FancyWindow>
